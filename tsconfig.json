{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "moduleResolution": "node",  
      "typeRoots": ["node_modules/@types", "node_modules/vitest/globals"]
    },
    "include": ["src/**/*", "tests/**/*"]
  }
  